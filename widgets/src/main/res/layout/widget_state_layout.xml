<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <!--可以换成lottie动画控件，方便酷炫动画-->
    <ImageView
        android:id="@+id/widget_hint_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/widget_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/widget_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        tools:text="网络开小差了，别担心，试试刷新" />

    <TextView
        android:id="@+id/widget_state_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        tools:text="正在加载数据，请稍等..." />

    <TextView
        android:id="@+id/widget_reload_tv"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/widget_btn_round_gray_stroke_selector"
        android:gravity="center"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:textSize="16sp"
        tools:text="重新加载" />
</LinearLayout>